{
  "include": [
    "src",
    "test",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "module": "NodeNext",
    "useDefineForClassFields": true,
    "removeComments": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "sourceMap": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "rootDir": "src",
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
  },
  "ts-node": {
    "esm": true
  }
}
