{
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": [
      "node"
    ],
    "declaration": true,
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true,
    "removeComments": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": [
      "ESNext"
    ],
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./",
    "skipLibCheck": true,
    "rootDir": "src",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "allowJs": false,
    "checkJs": false,
  },
  "ts-node": {
    "esm": true
  }
}
