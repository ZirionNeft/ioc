{
  "name": "@zirion/ioc",
  "description": "IoC implementation using dependency injection",
  "version": "1.3.0",
  "packageManager": "yarn@4.5.0",
  "type": "module",
  "keywords": [
    "Dependency Injection",
    "IoC Container",
    "Inversion of Control",
    "IoC",
    "DI",
    "Inject",
    "Dependency",
    "DI Container",
    "Service Locator",
    "Dependency Management",
    "Object Lifecycle",
    "DI Framework",
    "Constructor Injection",
    "Singleton Pattern",
    "Multiple Scopes",
    "Scopes",
    "Dependency Resolution",
    "Clean Architecture",
    "Solid",
    "Dependency Injection Framework",
    "Service Registry",
    "Dependency Injection Library",
    "Design Patterns",
    "Software Architecture"
  ],
  "scripts": {
    "build": "rm -rf build && tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "lint": "eslint ./src/**/*.ts",
    "test": "vitest --run",
    "coverage": "vitest run --coverage",
    "prepack": "yarn lint && yarn test --silent",
    "prepublish": "yarn build"
  },
  "homepage": "https://github.com/ZirionNeft/ioc",
  "repository": {
    "type": "git",
    "url": "git@github.com:ZirionNeft/ioc.git"
  },
  "license": "MIT",
  "imports": {
    "#base/*": "./src/*.js"
  },
  "exports": {
    ".": {
      "types": "./build/types/index.d.ts",
      "require": "./build/cjs/index.js",
      "import": "./build/esm/index.js",
      "default": "./build/esm/index.js"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    ">0.5%",
    "fully supports es6-module",
    "maintained node versions"
  ],
  "devDependencies": {
    "@vitest/coverage-v8": "2.1.5",
    "eslint": "9.15.0",
    "eslint-config-prettier": "9.1.0",
    "typescript": "5.7.2",
    "typescript-eslint": "8.15.0",
    "vitest": "2.1.5"
  },
  "files": [
    "build"
  ]
}
